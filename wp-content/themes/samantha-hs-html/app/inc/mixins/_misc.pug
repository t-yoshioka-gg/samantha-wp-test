        if (data.category)
          each category in data.category
            span.c-card-thumb__category !{category}
        .c-card-thumb__title !{data.text}
        if (data.tags)
          ul.c-card-thumb__tags
            each tag in data.tags
              li.c-card-thumb__tag #!{tag}
        .c-card-thumb__date !{data.date}

