mixin c_hero-block-wide(props)
  .c-hero-block-wide
    each data in props
      if (data.switch)
      -
        var $options = {
          selector: 'js-tabs',
          activeClass: 'is-active',
          navsClass: 'js-tabs-nav',
          navTargetAttr: 'data-tab-target',
          paneClass: 'js-tabs-content'
        }
      .c-hero-block-wide__block
        .c-hero-block-wide__images(class=$options.selector)
          .c-hero-block-wide__image
            +bgimg(data.img01).c-hero-block-wide__img.is-01(class=$options.paneClass data-tab-name="0")
            if(data.img02)
              +bgimg(data.img02).c-hero-block-wide__img.is-02(class=$options.paneClass data-tab-name="1")
          if(data.switch)
            ul.c-hero-block-wide__switch(class=$options.navsClass)
              li: +a("#")(data-tab-target="0").c-hero-block-wide__button.is-before.is-active Before
              li: +a("#")(data-tab-target="1").c-hero-block-wide__button.is-after After
        .c-hero-block-wide__content
          .c-hero-block-wide__title
            h3.c-heading.is-lg
              small !{data.subtitle}
              b !{data.title}
          .c-hero-block-wide__text !{data.text}
          if(data.url)
            .c-hero-block-wide__link
              +a(data.url).c-button.is-sm 詳しくはこちら

