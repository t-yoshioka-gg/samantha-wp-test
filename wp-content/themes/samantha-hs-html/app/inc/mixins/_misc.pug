mixin c_flow-block(props)
  .c-box-number
    each data, i in props
      - var num = i + 1;
      .c-box-number__block
        .c-box-number__head
          .c-box-number__number
            if (data.small)
              small !{data.small}
            else
              small FLOW
            if (num < 10)
              span 0#{num}
            else
              span #{num}
        .c-box-number__content
          .c-box-number__title !{data.title}
          .c-box-number__text !{data.text}
