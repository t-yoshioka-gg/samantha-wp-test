block append config
  - current.id = "company" // ページのID
  - current.title = "会社情報" // タイトル
  - current.description = "これは会社情報についての説明文です" // 説明文
  - current.bodyClass = "company" // body に付与するクラス
  - current.depth = 2 // ページの階層

block page_header
  +l_page_header({
    image: "img-page-header-company.jpg",
    title: "会社情報",
    subtitle: ""
